<!doctype html>
<html lang="en" class="web-font">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{{ renderData.title or title or metadata.title }}</title>
	<link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
	<link href="https://blog-rendall-dev-comments.netlify.app/css/simple-comment.css" rel="stylesheet" />
	<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
</head>

<body class="Blog">
	<header class="Blog__Header">
		<h1 class="Blog__Title"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
	</header>

	<main{% if templateClass %} class="{{ templateClass }}" {% endif %}>
		{{ content | safe }}
		</main>
		<div id="simple-comment-area">
			<h2>Conversation</h2>
			<p>Feel free to leave a comment</p>
		</div>

		<footer></footer>

		<!-- Current page: {{ page.url | url }} -->
		<script src="/js/home.js"></script>
		<script type="module" src="https://blog-rendall-dev-comments.netlify.app/js/simple-comment.js"></script>
</body>

</html>